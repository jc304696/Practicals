BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input
            text: '0'
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: up
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                id: down
                text: 'Down'
                on_press: app.handle_increment(-1)

    Button:
        id: convert
        text: 'Convert miles to km'
        on_press: app.handle_conversion()

    Label:
        id: display
        text: ''